@model Escuela.Dominio.Enrollment
@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <title>ComboBox</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
    <style>
        h1{
            text-align:center;
            color:burlywood;
        }
    </style>


</head>
<body>

    <h1>Enrollments Data</h1>
    <br />

    @using (Html.BeginForm("Succes", "Enrollment", FormMethod.Post))
    {


        @Html.DropDownListFor(a => a.StudentId, new SelectList(ViewBag.SList, "Value", "Text"), "Select a students", new { @class = "form-control" })
        <br />
        @Html.DropDownListFor(b => b.CourseId, new SelectList(ViewBag.CList, "Value", "Text"), "Select a course", new { @class = "form-control" })
        <br />
        <label for="grade">Grade (A,B,C,D)</label>
        <br />
        <input type="text" name="grade" />
        <br>
        <br />
        <input type="submit" value="SAVE" class="btn btn-success"/>

    }



</body>
</html>